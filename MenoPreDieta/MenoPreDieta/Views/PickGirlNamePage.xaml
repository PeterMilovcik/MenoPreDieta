<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MenoPreDieta.Views.PickGirlNamePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MenoPreDieta.Views;assembly=MenoPreDieta"
    Title="Ktoré meno pre dievča sa ti páči viac?"
    Shell.BackgroundColor="{DynamicResource PrimaryDark}">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Command="{Binding RestoreCommand}"
            IconImageSource="ic_restore.png"
            Text="Vratiť meno z koša" />
        <ToolbarItem
            Command="{Binding ResetCommand}"
            IconImageSource="ic_reset.png"
            Text="Začať odznova" />
        <ToolbarItem
            Command="{Binding ShowRankedNamesCommand}"
            IconImageSource="ic_action_format_list_numbered.png"
            Text="Rebríček mien" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <views:PickNameView />
    </ContentPage.Content>
</ContentPage>