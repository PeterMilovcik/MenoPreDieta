<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MenoPreDieta.Views.PickNameView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:fab="clr-namespace:Refractored.FabControl;assembly=Refractored.FabControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentView.Content>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="20,0,10,0"
                BackgroundColor="{Binding GenderColor}"
                Command="{Binding PickFirstNameCommand}"
                CornerRadius="30"
                FontSize="Large"
                HorizontalOptions="FillAndExpand"
                Text="{Binding First.Name}"
                VerticalOptions="FillAndExpand" />

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,20,0"
                BackgroundColor="{Binding GenderColor}"
                Command="{Binding PickSecondNameCommand}"
                CornerRadius="30"
                FontSize="Large"
                HorizontalOptions="FillAndExpand"
                Text="{Binding Second.Name}"
                VerticalOptions="FillAndExpand" />

            <fab:FloatingActionButtonView
                Grid.Row="0"
                Grid.Column="0"
                ColorNormal="{DynamicResource Red}"
                ColorPressed="{DynamicResource RedDark}"
                ColorRipple="{DynamicResource RedDark}"
                Command="{Binding RemoveFirstNameCommand}"
                HorizontalOptions="Start"
                ImageName="ic_clear_white.png" />

            <fab:FloatingActionButtonView
                Grid.Row="0"
                Grid.Column="1"
                ColorNormal="{DynamicResource Red}"
                ColorPressed="{DynamicResource RedDark}"
                ColorRipple="{DynamicResource RedDark}"
                Command="{Binding RemoveSecondNameCommand}"
                HorizontalOptions="End"
                ImageName="ic_clear_white.png" />

            <StackLayout
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalOptions="Center"
                Orientation="Horizontal"
                VerticalOptions="End">

                <Label FontSize="Small" Text="MENÁ:" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="{Binding NamesCount}" />

                <Label FontSize="Small" Text="DVOJICE:" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="{Binding PairsCount}" />

                <Label FontSize="Small" Text="OSTÁVA:" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="{Binding RemainingPairsCount}" />

                <Label FontSize="Small" Text="PRESNOSŤ:" />
                <Label
                    FontAttributes="Bold"
                    FontSize="Small"
                    Text="{Binding Accuracy, StringFormat='{0:P2}'}" />

            </StackLayout>

            <ActivityIndicator
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HeightRequest="70"
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                VerticalOptions="Center"
                WidthRequest="70"
                Color="{Binding GenderColor}" />

        </Grid>

    </ContentView.Content>
</ContentView>