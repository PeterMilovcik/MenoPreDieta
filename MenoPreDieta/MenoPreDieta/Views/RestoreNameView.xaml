<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="MenoPreDieta.Views.RestoreNameView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Content>
        <Grid>
            <ListView
                HasUnevenRows="True"
                ItemsSource="{Binding Items}"
                SelectedItem="{Binding SelectedItem}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Margin="10,5" Padding="20,10">
                                <Label
                                    Margin="10,0"
                                    FontSize="Medium"
                                    Text="{Binding Value}"
                                    TextColor="Black" />
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ActivityIndicator
                Grid.Row="0"
                Grid.Column="0"
                HeightRequest="70"
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                VerticalOptions="Center"
                WidthRequest="70"
                Color="{DynamicResource Primary}" />

        </Grid>
    </ContentView.Content>
</ContentView>