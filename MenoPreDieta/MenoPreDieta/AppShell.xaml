<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="MenoPreDieta.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MenoPreDieta.Views"
    BackgroundColor="{DynamicResource Primary}">
    <FlyoutItem Title="Hlavná stránka">
        <Tab>
            <ShellContent>
                <views:MainPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Vyber meno pre chlapca">
        <Tab>
            <ShellContent>
                <views:PickBoyNamePage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Vyber meno pre dievča">
        <Tab>
            <ShellContent>
                <views:PickGirlNamePage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Rebríček chlapčenských mien">
        <Tab>
            <ShellContent>
                <views:RankedBoyNamesPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Rebríček dievčenských mien">
        <Tab>
            <ShellContent>
                <views:RankedGirlNamesPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Nastavenia">
        <Tab>
            <ShellContent>
                <views:MainPage />
            </ShellContent>
        </Tab>
    </FlyoutItem>
</Shell>